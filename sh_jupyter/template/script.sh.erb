#!/usr/bin/env bash

# Set working directory to notebook root directory
cd "${NOTEBOOK_ROOT}"

# Purge the module environment to avoid conflicts
module purge

# Load the Jupyter module (required)
module load $(module -t av py-<%= context.jp_mode %> | grep <%= context.sh_python_version %>)

<%- unless context.sh_modules.blank? -%>
# Load the require modules
module load <%= context.sh_modules %>
<%- end -%>

# List loaded modules
module list

# Launch the Jupyter Notebook Server
set -x
jupyter <%= context.jp_mode == "jupyterlab" ? "lab" : "notebook" %> --config="${CONFIG_FILE}" <%= context.sh_extra_jupyter_args %>
